{
    "functions": [
        {
            "source": ".output/server",
            "codebase": "nuxt",
            "runtime": "nodejs20"
        }
    ],
    "hosting": {
        "public": ".output/public",
        "ignore": [
            "firebase.json",
            "firebase-preview.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/_nuxt/**",
                "destination": "/_nuxt/"
            },
            {
                "source": "/assets/**",
                "destination": "/assets/"
            },
            {
                "source": "**",
                "function": "previewServer"
            }
        ],
        "headers": [
            {
                "source": "**/*.css",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "text/css"
                    }
                ]
            }
        ]
    }
}